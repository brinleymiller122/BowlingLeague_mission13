@{
    ViewData["Title"] = "Home Page";
}
@model List<Bowler>

<div>
    @if (ViewBag.TeamInfo == null)
    {
        <h1 class="text-center">All Bowlers</h1>
    }
    else
    {<h1 class="text-center">@ViewBag.TeamInfo.TeamName</h1>}

</div>

<div class="row">
<div class="col-3">
    <div class="d-grid mb-2">
        <a class="btn btn-block btn-primary" asp-action="Create" asp-controller="Home">Create Bowler</a><br />
        <a asp-controller="Home" asp-action="Index" asp-route-teamid="" class="btn btn-block btn-outline-secondary">All Bowlers</a>

        @foreach (var t in ViewBag.TeamNames)

        {


            <a asp-controller="Home" asp-action="Index" asp-route-teamid="@t.TeamID"
               class="btn btn-block @(ViewBag.SelectedType == t.TeamName ? "btn-primary" : "btn-outline-secondary")">@t.TeamName</a>

        }
    </div>
    

</div>

<div class="col">
    

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Middle Initial</th>
                <th>Last Name</th>
                <th>Address</th>
                <th>City</th>
                <th>State</th>
                <th>Zip</th>
                <th>Phone Number</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var b in ViewBag.Bowlers)
            {
                <tr>
                    <td>@b.BowlerFirstName</td>
                    <td>@b.BowlerMiddleInit</td>
                    <td>@b.BowlerLastName</td>
                    <td>@b.BowlerAddress</td>
                    <td>@b.BowlerCity</td>
                    <td>@b.BowlerState</td>
                    <td>@b.BowlerZip</td>
                    <td>@b.BowlerPhoneNumber</td>
                    <td><a asp-controller="Home" asp-action="Edit" asp-route-bowlerid="@b.BowlerID">Edit</a></td>
                    <td><a asp-controller="Home" asp-action="Delete" asp-route-bowlerid="@b.BowlerID">Delete</a></td>

                </tr>
            }

        </tbody>
    </table>

</div>
</div>